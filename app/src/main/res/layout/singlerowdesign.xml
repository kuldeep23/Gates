<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:id="@+id/eachCardView"
    app:cardElevation="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">



        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@color/teal_700"
            android:id="@+id/visitor_image"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunil"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/visitor_image"
            android:layout_marginLeft="09dp"
            android:textColor="#000"
            android:id="@+id/visitor_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zomato"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/visitor_name"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:id="@+id/visitor_sub_type"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELIVERY"
            android:padding="5dp"
            android:textSize="11dp"
            android:background="@color/teal_700"
            android:textColor="#FFFF"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/visitor_image"
            android:layout_below="@+id/visitor_sub_type"
            android:id="@+id/visitor_type"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTER"
            android:padding="5dp"
            android:textSize="11dp"
            android:background="#FF5C5C"
            android:textColor="#FFFF"
            android:layout_toRightOf="@+id/visitor_type"
            android:layout_below="@+id/visitor_sub_type"
            android:layout_marginLeft="10dp"
            android:id="@+id/visitor_status"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approved by : "
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/visitor_image"
            android:layout_below="@+id/visitor_type"
            android:id="@+id/approve_by"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pooja Goyal "
            android:textSize="12dp"
            android:layout_toRightOf="@+id/approve_by"
            android:layout_below="@+id/visitor_type"
            android:id="@+id/visitor_approved_by"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Timing : "
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/visitor_image"
            android:layout_below="@+id/approve_by"
            android:id="@+id/enter_time"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10-JAN-2022"
            android:textSize="12dp"
            android:layout_toRightOf="@+id/approve_by"
            android:layout_below="@+id/approve_by"
            android:id="@+id/visitor_enter_date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textSize="12dp"
            android:layout_toRightOf="@+id/visitor_enter_date"
            android:layout_below="@+id/approve_by"
            android:id="@+id/hypen"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:50:00PM"
            android:textSize="12dp"
            android:layout_toRightOf="@+id/hypen"
            android:layout_below="@+id/approve_by"
            android:id="@+id/visitor_enter_time"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit Timing : "
            android:textSize="12dp"
            android:layout_toRightOf="@+id/visitor_image"
            android:layout_below="@+id/enter_time"
            android:layout_marginLeft="10dp"
            android:id="@+id/exit_time"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10-JAN-2022"
            android:textSize="12dp"
            android:layout_toRightOf="@+id/exit_time"
            android:layout_below="@+id/enter_time"
            android:id="@+id/visitor_exit_date"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textSize="12dp"
            android:layout_toRightOf="@+id/visitor_exit_date"
            android:layout_below="@+id/enter_time"
            android:id="@+id/hypenn"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:55:00PM"
            android:textSize="12dp"
            android:layout_toRightOf="@+id/hypenn"
            android:layout_below="@+id/enter_time"
            android:id="@+id/visitor_exit_time"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/visitor_exit_time"
            android:layout_marginTop="10dp"
            android:background="#E8E8E8" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/exit_time">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:text="Wrong Entry"
                    android:textColor="#FFF"
                    android:id="@+id/wrong_entry"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:background="@color/teal_700"
                    android:textColor="#FFF"
                    android:id="@+id/visitor_call"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>